<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="20dp"
    android:elevation="10dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_margin="5dp">

    <RelativeLayout
        android:background="@drawable/promo_bg"
        android:paddingTop="10dp"
        android:paddingStart="15dp"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/call_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableEnd="@drawable/ic_baseline_close_24"
            android:fontFamily="@font/calibrib"
            android:text="@string/text_reg_fname"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/call_name">

            <TableRow>

                <TextView
                    android:fontFamily="@font/calibril"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:text="Call duration:                    "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:fontFamily="@font/calibril"
                    android:id="@+id/call_duration"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </TableRow>

            <TableRow>

                <TextView
                    android:fontFamily="@font/calibril"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Minutes"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:fontFamily="@font/calibril"
                    android:id="@+id/minutes"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="0.0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </TableRow>

            <TableRow>

                <TextView
                    android:fontFamily="@font/calibril"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Call rate"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:fontFamily="@font/calibril"
                    android:id="@+id/call_rate"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="0.0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </TableRow>

            <TableRow>

                <TextView
                    android:fontFamily="@font/calibril"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Call amount"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:fontFamily="@font/calibril"
                    android:id="@+id/call_amount"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="0.0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </TableRow>

            <TableRow>

                <TextView
                    android:fontFamily="@font/calibril"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Call date"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:fontFamily="@font/calibril"
                    android:id="@+id/call_date"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="0.0"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>