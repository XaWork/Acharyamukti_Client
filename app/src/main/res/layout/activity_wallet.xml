<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".activity.Wallet">

    <TextView
        android:id="@+id/wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wallet Balance"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/totalBalance1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wallet"
        android:layout_marginTop="10dp"
        android:text="Rs."
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totalBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wallet"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="0.7838395"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalBalance1"
        android:layout_marginTop="40dp"
        android:text="Recharge Wallet"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rechargePack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recharge"
        android:text="Choose form available recharge pack"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/rechargePack1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rechargePack"
        android:layout_margin="20sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRs1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/custom_horoscope_bg"
            android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
            android:gravity="center"
            android:padding="5dp"
            android:text="100.00"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRs2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:background="@drawable/custom_horoscope_bg"
            android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
            android:gravity="center"
            android:padding="5dp"
            android:text="200.00"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRs3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/custom_horoscope_bg"
            android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
            android:gravity="center"
            android:padding="5dp"
            android:text="500.00"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rechargePack2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rechargePack1"
        android:layout_margin="20sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRs4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/custom_horoscope_bg"
            android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
            android:gravity="center"
            android:padding="5dp"
            android:text="1000"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRs5"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:background="@drawable/custom_horoscope_bg"
            android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
            android:gravity="center"
            android:padding="5dp"
            android:text="2000"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRs6"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/custom_horoscope_bg"
            android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
            android:gravity="center"
            android:padding="5dp"
            android:text="5000"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/rechargePack3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rechargePack2"
        android:layout_marginTop="150dp"
        android:gravity="bottom"
        android:text="Your recharge pack can be used multiple Astrologer"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rechargePack3"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/bhim_pay" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/google_pay" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/phone_pay" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/paytm" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/visa" />
    </LinearLayout>
</RelativeLayout>