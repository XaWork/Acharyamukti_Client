<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeCustom"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="5dp"
    android:background="@drawable/back_image">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImage"
        android:layout_width="80dp"
        android:layout_centerVertical="true"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImage"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:background="@drawable/search_bg"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingTop="3dp"
        android:paddingEnd="10dp"
        android:paddingBottom="3dp"
        android:text="Astro Acharya mukti"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#1FAF27"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="5dp"
        android:text="Schedule"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/important"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:text="Importance of matching"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/making"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/important"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="Making"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/making"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/rectangle__layout_bg"
        android:gravity="center"
        android:padding="3dp"
        android:text="05|11|2022, 5 PM IST"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImage"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/search_bg"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:text="Watch Now"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="normal" />

</RelativeLayout>