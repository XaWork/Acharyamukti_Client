<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="65dp"
            android:fillViewport="true"
            android:scrollbars="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/relativeLyout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <HorizontalScrollView
                    android:id="@+id/nestedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:fillViewport="true"
                    android:nestedScrollingEnabled="false"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/horoscope"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:elevation="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:background="@drawable/custom_horoscope_bg"
                                android:padding="5dp"
                                android:src="@drawable/horoscope_slider" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="3dp"
                                android:paddingBottom="5dp"
                                android:text="@string/text_horoscope"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/loveRelationShip"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:elevation="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:background="@drawable/custom_horoscope_bg"
                                android:padding="5dp"
                                android:src="@drawable/love_and_relationship" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="3dp"
                                android:paddingBottom="5dp"
                                android:text="@string/text_love"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/marriageKundly"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:elevation="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:background="@drawable/custom_horoscope_bg"
                                android:padding="5dp"
                                android:src="@drawable/marriage_kundali" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="3dp"
                                android:paddingBottom="5dp"
                                android:text="@string/text_marriage"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/career"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:elevation="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:background="@drawable/custom_horoscope_bg"
                                android:padding="5dp"
                                android:src="@drawable/career_growth" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="3dp"
                                android:paddingBottom="5dp"
                                android:text="@string/text_career"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/money"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:elevation="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:background="@drawable/custom_horoscope_bg"
                                android:padding="5dp"
                                android:src="@drawable/business_black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="3dp"
                                android:paddingBottom="5dp"
                                android:text="@string/text_business"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                </HorizontalScrollView>

                <FrameLayout
                    android:id="@+id/bannerImageTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nestedLayout">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner_top" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center_horizontal"
                        android:text="Consult India's best \nAstrologers"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="90dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/search_bg"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="consult Now"
                        android:textAllCaps="true"
                        android:textColor="@color/black" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/layoutLive"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/bannerImageTop"
                    android:background="#F0F3F4"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="Join Acharyamukti Astrologer"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewAll"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/layout_bg"
                        android:gravity="center"
                        android:text="View all"
                        android:textColor="@color/black"
                        android:textStyle="normal" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewLive"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_below="@+id/layoutLive" />

                <LinearLayout
                    android:id="@+id/bannerImage2"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_below="@+id/recyclerViewLive"
                    android:background="@drawable/earn_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Refer And Earn"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="110dp"
                        android:layout_marginBottom="5dp"
                        android:text="Refer your friends and relative to our online session and earn some extra money.There is no hard work in this process to earn money.Earn up to 50 on free session gives to your family and friends"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="5dp"
                        android:background="@drawable/search_bg"
                        android:gravity="center"
                        android:text="Invite Now"
                        android:textColor="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bannerImage2"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#F0F3F4"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Currently available"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/viewAll2"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/layout_bg"
                            android:gravity="center"
                            android:text="@string/button_view_all"
                            android:textColor="@color/black"
                            android:textStyle="normal" />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:paddingBottom="10dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:elevation="15dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F0F3F4"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Feedback to the CEO office"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="Please Share your honest feedback to help us improve"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="normal" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:background="@color/white"
                                android:gravity="top"
                                android:hint="Start typing here"
                                android:inputType="textMultiLine"
                                android:overScrollMode="always"
                                android:padding="5dp"
                                android:scrollbarStyle="insideInset"
                                android:scrollbars="vertical"
                                android:textSize="12sp" />

                            <Button
                                android:layout_width="140dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"
                                android:background="@drawable/text_bg"
                                android:text="send" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="#F0F3F4"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:padding="10dp"
                                android:src="@drawable/private01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Private &amp;\nConfidential"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:padding="12dp"
                                android:src="@drawable/profile_summery" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Verified &amp;\nAstrologer"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:padding="12dp"
                                android:src="@drawable/secure_payment" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Secure &amp;\nPayment"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </FrameLayout>
</FrameLayout>