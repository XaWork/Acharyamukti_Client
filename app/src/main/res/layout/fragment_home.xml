<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="65dp"
            android:fillViewport="true"
            android:scrollbars="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/relativeLyout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <HorizontalScrollView
                    android:id="@+id/nestedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:fillViewport="true"
                    android:nestedScrollingEnabled="false"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/horoscope"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:elevation="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:background="@drawable/whitewithoutconner_bg"
                                android:padding="5dp"
                                android:src="@drawable/horoscope_new" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="3dp"
                                android:paddingBottom="5dp"
                                android:text="@string/text_horoscope"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/loveRelationShip"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:elevation="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:background="@drawable/whitewithoutconner_bg"
                                android:padding="5dp"
                                android:src="@drawable/love_and_relationship" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="3dp"
                                android:paddingBottom="5dp"
                                android:text="@string/text_love"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/marriageKundly"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:elevation="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:background="@drawable/whitewithoutconner_bg"
                                android:padding="5dp"
                                android:src="@drawable/marriage_kundali" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="3dp"
                                android:paddingBottom="5dp"
                                android:text="@string/text_marriage"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/career"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:elevation="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:background="@drawable/whitewithoutconner_bg"
                                android:padding="5dp"
                                android:src="@drawable/career_growth" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="3dp"
                                android:paddingBottom="5dp"
                                android:text="@string/text_career"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/money"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:elevation="15dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:background="@drawable/whitewithoutconner_bg"
                                android:padding="5dp"
                                android:src="@drawable/business_black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingTop="3dp"
                                android:paddingBottom="5dp"
                                android:text="@string/text_business"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                </HorizontalScrollView>

                <FrameLayout
                    android:id="@+id/bannerImageTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nestedLayout">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner_top" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center_horizontal"
                        android:text="Consult India's best \nAstrologers"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="80dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/viewall_bg"
                        android:gravity="center"
                        android:text="consult Now"
                        android:textColor="@color/black"
                        android:textSize="9sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/layoutLive"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/bannerImageTop"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="Join Acharyamukti Astrologer"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viewAll"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/layout_bg"
                        android:gravity="center"
                        android:text="View all"
                        android:textColor="@color/black"
                        android:textStyle="normal" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewLive"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_below="@+id/layoutLive" />

                <ImageView
                    android:id="@+id/bannerImage2"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_below="@+id/recyclerViewLive"
                    android:scaleType="fitXY"
                    android:src="@drawable/earn_refund" />

                <LinearLayout
                    android:id="@+id/layoutRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bannerImage2"
                    android:layout_margin="3dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Currently available"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/layout_bg"
                            android:gravity="center"
                            android:text="@string/button_view_all"
                            android:textColor="@color/black"
                            android:textStyle="normal" />
                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </FrameLayout>
</FrameLayout>